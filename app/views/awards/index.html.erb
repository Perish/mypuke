<div class="row">
	<div class="col-md-12">
		<div class="shared-breadcrumb">
		  	<ol class="breadcrumb">
			  <span>您现在所在的位置：</span>
			  <li><%= link_to "首页", root_path %></li>
			  <li>企业殊荣</li>
			</ol>
		</div>
	</div>
</div>
<div class="row">
	<%= render "products/product_sider" %>
	<div class="col-md-8">
		<div class="panel panel-primary">
		  <div class="panel-heading">
			  <h3 class="panel-title">企业殊荣</h3>
		  </div>
		  <div class="panel-body">
  			  <% if @awards.blank? %>
  			  <p class="text-center">还没有企业殊荣哟~！</p>
  			  <% else %>
			  	<% @awards.in_groups_of(3).each do |awards| %>
					<div class="row">
						<% awards.each do |award| %>
						<% next if award.blank? %>
					      <div class="col-sm-6 col-md-4">
					        <div class="thumbnail">
					        	<%= image_tag award.pic_url || "default.jpg", style: "height: 200px; width: 100%; display: block;" %>
					          <div class="caption">
					            <h3 class="thumbnail-label"><%= award.name %></h3>
					          </div>
					        </div>
					      </div>
						<% end %>
					</div>
			  	<% end %>
				<%= paginate @awards %>
  			  <% end %>

		  </div>
	  	</div>
	</div>
</div>