		<div class="panel panel-primary">
		  <div class="panel-heading">
			  <h3 class="panel-title"><%= @product.name %></h3>
		  </div>
		  <div class="panel-body">
			<p class="text-center">
				<%= image_tag @product.pic_url ||  "default.jpg", size: "300x180" %>
			</p>
			<hr>
			<div class="row">
				<div class="col-md-6 col-md-offset-3 product-content">
