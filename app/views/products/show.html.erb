        <div class="container">
           <div class="panel panel-default">
                <div class="panel-body">
            <div class="row"> 
                <div class="col-xs-7 col-md-7">
					<div class="gallery">
					    <div class="gallery-inner">
					    	<%= image_tag @product.pic_url, class: "img-responsive center-block", alt: @product.name %>
					    </div>
					</div>
                    
                </div>
                <div class="col-xs-5 col-md-5 goods-info">
                    <ul class="list-unstyled">
                        <li><h2><%= @product.name %></h2></li>
                        <li>酒厂: <%= @product.factory %></li>
                        <li>产地: <%= @product.origin %></li>
                        <li>净含量: <%= @product.weight %> &nbsp;&nbsp;&nbsp; 酒精度: <%= @product.alco_level %> &nbsp;&nbsp;&nbsp; 箱规: <%= @product.box %></li>
                        <li>规格: <%= @product.standard %> &nbsp;&nbsp;&nbsp; 香型: <%= @product.flavor %></li>
                        <li>原料: <%= @product.material %></li>
                        <li><button type="button" class="btn btn-danger">价格: <small><%= @product.price %>￥</small></button></li>
                    </ul>
                    <div class="media">
                      <div class="media-body text-warning">
                        <%= @product.detail_qrcode %>
                      </div>
                      <div class="media-right">
                        <a href="#">
                            <%= image_tag 'puke_qrcode.png', size: '100x100' %>
                        </a>
                      </div>
                    </div>
                </div>
            </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>商品描述</h4>
                </div>
                <div class="panel-body">
                	<%= sanitize @product.content %>
                </div>
            </div>
        </div>