	<div class="col-md-4">
		<div class="panel panel-primary">
		  <div class="panel-heading">
			  <h3 class="panel-title"><%= fa_icon("mobile-phone") %>&nbsp;联系我们
				<%= link_to contacts_path, class: "pull-right" do %>
			  		<small class="more">更多<%= fa_icon("signal") %></small>
			  	<% end %>
			  </h3>
		  </div>
		  <div class="panel-body">
		  	<% if @company.contact.blank? %>
				<p class="text-center">还没有联系方式哟~！</p>
		  	<% else %>
				<%= sanitize @company.contact.content %>
		  	<% end %>
		  </div>
		</div>

		<div class="panel panel-primary">
		  <div class="panel-heading">
			  <h3 class="panel-title"><%= fa_icon("location-arrow") %>&nbsp;公司动态
			  <%= link_to infos_path(flag: 1), class: "pull-right" do %>
				<small class="more">更多<%= fa_icon("signal") %></small>
			  <% end %></h3>
		  </div>
		  <div class="panel-body">
			  <ul class="list-group">
			  <% @company.infos.lastest_cinfos.each do |info| %>
					<li class="list-group-item">
						<%= link_to info.name, info, class: "text-muted" %>
						<span class="pull-right text-muted"><%= info.created_at.strftime("%F") %></span>
					</li>
			  <% end %>
			</ul>

			  <% if @company.infos.lastest_cinfos.blank? %>
			  <p class="text-center">还没有公司动态哟~！</p>
			  <% end %>
		  </div>
		</div>
	</div>