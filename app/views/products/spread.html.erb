<div class="container"> 
	<div class="panel panel-default">
	    <div class="panel-body">
	        <p></p>
	        <p style="text-align: center;position:relative;">
	        	<% @company.spreads.each_with_index do |product, cot| %>
	        		<%= link_to product do %>
						<%= image_tag product.pic_url, alt: product.name, width: "100%" %>
					<% end %>
					<% if cot != @company.spreads.size-1 %>
	        		<hr>
	        		<% end %>
	        	<% end %>
	        </p>
	        <p></p>
	    </div>
	</div>
</div>