<div class="row">
	<div class="col-md-12">
		<div class="shared-breadcrumb">
		  	<ol class="breadcrumb">
			  <span>您现在所在的位置：</span>
			  <li><%= link_to "首页", root_path %></li>
			  <li>招聘信息</li>
			</ol>
		</div>
	</div>
</div>
<div class="row">
	<%= render "products/product_sider" %>
	<div class="col-md-8">
		<div class="panel panel-primary">
		  <div class="panel-heading">
			  <h3 class="panel-title">招聘信息</h3>
		  </div>
		  <div class="panel-body">
		  	<% if @invites.empty? %>
				<p class="text-center">还没有招聘信息哟~！</p>
		  	<% else %>
		  	<% @invites.each do |invite| %>
				<div class="media">
			      <div class="media-body">
			      <%= link_to invite do %>
			      <h4 class="media-heading"><%= invite.name %><small class="pull-right"><%= fa_icon('clock-o') %> <%= invite.created_at.strftime("%F") %></small></h4>
			      <% end %>
			        <%= truncate(strip_tags(invite.content), length: 120, omission: '...') %>
			      </div>
			    </div>
		  	<% end %>
		  	<%= paginate @invites %>
		  	<% end %>
		  </div>
	  	</div>
	</div>
</div>