<div class="row">
	<div class="col-md-12">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  		<!-- Indicators -->
  		<% if @company.com_carousel.present? %>
  			<% num = @company.com_carousel.size-1 %>
	  		<ol class="carousel-indicators">
	  			<% 0.upto(num) do |cot| %>
	    		<li data-target="#carousel-example-generic" data-slide-to="<%= cot %>" class="<%= "active" if cot==0 %>"></li>
	  			<% end %>
	  		</ol>
	  		<div class="carousel-inner" role="listbox">
	  			<% @company.com_carousel.each_with_index do |carousel, index| %>
	    		<div class="item <%= "active" if index==0 %>">
		      		<%= image_tag carousel.pic_url || "default.jpg", style: "height: 380px; width: 100%;" %>
		      		<div class="carousel-caption">
		       	 		<%= carousel.name %>
		      		</div>
	   	 		</div>
	   	 		<% end %>
	  		</div>
  		<% else %>
	  		<ol class="carousel-indicators">
	    		<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
	    		<li data-target="#carousel-example-generic" data-slide-to="1"></li>
	    		<li data-target="#carousel-example-generic" data-slide-to="2"></li>
	  		</ol>

	  		<!-- Wrapper for slides -->
	  		<div class="carousel-inner" role="listbox">
	    		<div class="item active">
	      		<img src="/assets/default.jpg" alt="..."  style="height: 380px; width: 100%;">
	      		<div class="carousel-caption">
	       	 	还没有轮播图片哟~！
	      		</div>
	   	 	</div>
	    		<div class="item">
	      		<img src="/assets/default.jpg" alt="..."  style="height: 380px; width: 100%;">
	      		<div class="carousel-caption">
	       	 	还没有轮播图片哟~！
	      		</div>
	    		</div>
	  		</div>
	  		<% end %>

	  			<!-- Controls -->
	  			<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
	    			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	    			<span class="sr-only">下一张</span>
	  			</a>
	  			<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
	    			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	    			<span class="sr-only">上一张</span>
	  			</a>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			  <div class="panel-heading">
			  <h3 class="panel-title"><%= fa_icon("th-large") %>&nbsp;产品展示
			  	<%= link_to products_path, class: "pull-right" do %>
					<small class="more">更多<%= fa_icon("signal") %></small>
			  	<% end %>
			  </h3>
			  </div>
			  <div class="panel-body">
			<div class="row">
  			  <% @company.sandom_products.each do |product| %>
			      <div class="col-xs-6 col-md-3">
			        <a href="#" class="thumbnail">
			          <%= image_tag product.pic_url || "default.jpg", alt: "100%x180", style: "height: 180px; width: 100%; display: block;", data: {"holder-rendered" => true} %>
					  <div class="text-center">
					    <%= product.name %>
					  </div>
			        </a>
			      </div>
  			  <% end %>
  			  <% if @company.sandom_products.blank? %>
  			  <p class="text-center">还没有相关产品哟~！</p>
  			  <% end %>
			</div>
			  </div>
	  </div>
  </div>
</div>
