<div class="panel">
	<div class="panel-body">
		<div class="subheader">公司介绍</div>
		<%= form_for([:admin, @company]) do |f| %>
			<% flash.each do |key, value|%>
			<div class="alert alert-<%= key %>" role="alert"><%= value %></div>
			<% end %>
  <%= render partial: "shared/error_messages", locals: {obj: @company} %>
		    <div class="form-group">
		      <label for="name">公司名称</label>
			  <%= f.text_field :name, class: "form-control", placeholder: "公司名称" %>
		    </div>
		    <div class="form-group">
		    	<label for="main_url">公司网址</label>
		    	<div class="input-group">
			    	<div class="input-group-addon">http://</div>
					<%= f.text_field :main_url, class: "form-control", placeholder: "公司网址, 例如: www.baidu.com" %>
				</div>
		    </div>
		    <div class="form-group">
		      <label for="profile">公司简介</label>
			  <%= f.text_area :summary, class: "form-control", placeholder: "公司简介", rows: 4, id: "summary" %>
		    </div>
		    <div class="form-group">
		      <label for="profile">公司详情</label>
			  <%= f.text_area :content, placeholder: "公司详情", id: "editor" %>
		    </div>
				<div class="form-group">
					<label for="pic">公司图片</label>
					<%= f.file_field :pic, class: "form-control" %>
					<%= image_tag(@company.pic_url, class: "img-thumbnail") if @company.pic? %>
				</div>
			<%= f.button "更新", class: "btn btn-success", data: { disable_with: "#{fa_icon("spinner spin", text: "更新...")}" } %>
		<% end %>

  <script>
  $(function(){
    var editor = new UE.ui.Editor();
    editor.render("editor");
    // $("#editor").hide();
  });
  </script>
	</div>
</div>