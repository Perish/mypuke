<div class="panel">
	<div class="panel-body">
		<div class="subheader">产品详情</div>
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>" role="alert"><%= value %></div>
		<% end %>
		<h3 class="text-center"><%= @product.name %></h3>
		<p class="text-muted text-center"><%= fa_icon('clock-o') %> <%= @product.created_at.strftime("%F %T") %></p>
		<p class="text-center">
			<%= image_tag @product.pic_url ||  "default.jpg", size: "300x180" %>
		</p>
		<div class="row">
			<div class="product-content">
				<%= sanitize @product.content %>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	var hideAlert = function(){
		$(".alert").fadeOut("slow");
	}
	setTimeout(hideAlert, 3000);
</script>