<div class="panel">
  <div class="panel-body">
  	<div class="subheader">
  		产品列表 
  		<%= link_to new_admin_product_path, class: "pull-right" do %>
			<%= fa_icon("plus") %> 添加产品
  		<% end %>
  	</div>
    <% if @products.blank? %>
		<div class="alert alert-success" role="alert">还没有产品，快去<%= link_to "创建", new_admin_product_path, class: "btn btn-primary" %>吧！</div>
    <% else %>
		<div class="row">
			<div class="col-xs-6 col-sm-3 text-center">产品图片</div>
			<div class="col-xs-6 col-sm-3 text-center">产品名称</div>
			<div class="col-xs-6 col-sm-3 text-center">产品详情</div>
			<div class="col-xs-6 col-sm-3 text-center">操作</div>
		</div>
			<table class="table">
		      <tbody>
		<% @products.each do |product| %>
		        <tr class="row <%= dom_id(product) %>">
		          <th class="col-xs-6 col-sm-3"><%= image_tag product.pic_url ||  "default.jpg", size: "60x55" %></th>
		          <td class="col-xs-6 col-sm-3 text-center"><%= product.name %></td>
		          <td class="col-xs-6 col-sm-3 text-center"><%= truncate(strip_tags(product.content), length: 40, omission: '...' ) %></td>
		          <td class="col-xs-6 col-sm-3 text-center">
		          	<%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-primary" %>
		          	<%= link_to "查看", admin_product_path(product), class: "btn btn-primary" %>
		          	<%= link_to "删除", admin_product_path(product), class: "btn btn-danger", data: { confirm: "确定删除吗？", disable_with: "<i class='fa fa-spinner fa-spin'></i> 删除..." }, method: :delete, remote: true %>
		          </td>
		        </tr>
		<% end %>
		      </tbody>
		    </table>
		    <%= paginate @products %>
    <% end %>
  </div>
</div>