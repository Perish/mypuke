<%= form_for([:admin, @info]) do |f| %>
  <%= render partial: "shared/error_messages", locals: {obj: @info} %>
    <div class="form-group">
      <label for="name">资讯标题</label>
      <%= f.text_field :name, class: "form-control", placeholder: "资讯标题" %>
    </div>
    <div class="form-group">
      <label for="style">资讯类型</label>
      <%= f.select :style, Info::INFO_STYLE.invert, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="content">内容详情</label>
    <%= f.text_area :content, class: "form-control", placeholder: "内容详情", id: "editor" %>
    </div>
  <%= f.button "提交", class: "btn btn-success", data: { disable_with: "#{fa_icon("spinner spin", text: "提交...")}" } %>
  <%= link_to "取消", admin_infos_path, class: "btn btn-primary" %>
<% end %>
  <script>
  var editor = new Simditor({
    textarea: $('#editor')
  });
  </script>