<div class="panel">
  <div class="panel-body">
  	<div class="subheader">
  		企业荣誉 
  		<%= link_to new_admin_award_path, class: "pull-right" do %>
			<%= fa_icon("plus") %> 添加荣誉
  		<% end %>
  	</div>
    <% if @awards.blank? %>
		<div class="alert alert-success" role="alert">还没有添加的荣誉，快去<%= link_to "创建", new_admin_award_path, class: "btn btn-primary" %>吧！</div>
    <% else %>
		<div class="row">
			<div class="col-xs-6 col-sm-3 text-center">图片</div>
			<div class="col-xs-6 col-sm-3 text-center">名称</div>
			<div class="col-xs-6 col-sm-3 text-center">操作</div>
		</div>
		<% @awards.each do |award| %>
			<div class="row row-list <%= dom_id(award) %>">
				<div class="col-xs-6 col-sm-3 text-center">
					<%= award.name %>
				</div>
				<div class="col-xs-6 col-sm-3 text-center">
					<%=  image_tag award.pic_url ||  "default.jpg", size: "60x55" %>
				</div>
				<div class="col-xs-6 col-sm-3 text-center">
					<%= link_to "编辑", edit_admin_award_path(award), class: "btn btn-primary" %>
			          	<%= link_to "查看", admin_award_path(award), class: "btn btn-primary" %>
			          	<%= link_to "删除", admin_award_path(award), class: "btn btn-danger", data: { confirm: "确定删除吗？", disable_with: "<i class='fa fa-spinner fa-spin'></i> 删除..." }, method: :delete, remote: true %>
			    </div>
			</div>
		<% end %>
		    <%= paginate @awards %>
    <% end %>
  </div>
</div>