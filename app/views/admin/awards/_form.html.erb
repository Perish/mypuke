<%= form_for([:admin, @award]) do |f| %>
    <% flash.each do |key, value|%>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <div class="form-group">
      <label for="name">名称</label>
      <%= f.text_field :name, class: "form-control", placeholder: "产品名称" %>
    </div>
    <div class="form-group">
      <label for="pic">图片</label>
      <%= f.file_field :pic, class: "form-control" %>
      <%= image_tag(@award.pic_url, class: "img-thumbnail") if @award.pic? %>
    </div>
  <%= f.button "提交", class: "btn btn-success", data: { disable_with: "#{fa_icon("spinner spin", text: "提交...")}" } %>
  <%= link_to "取消", admin_awards_path, class: "btn btn-primary" %>
<% end %>