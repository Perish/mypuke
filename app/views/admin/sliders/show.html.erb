<div class="panel">
	<div class="panel-body">
		<div class="subheader">图片</div>
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>" role="alert"><%= value %></div>
		<% end %>
		<h3 class="text-center"><%= @slider.name %></h3>
		<p class="text-muted text-center"><%= fa_icon('clock-o') %> <%= @slider.created_at.strftime("%F %T") %></p>
		<p class="text-center">
			<%= image_tag @slider.pic_url ||  "default.jpg", class: "img-thumbnail" %>
		</p>
	</div>
</div>
<script type="text/javascript">
	var hideAlert = function(){
		$(".alert").fadeOut("slow");
	}
	setTimeout(hideAlert, 3000);
</script>