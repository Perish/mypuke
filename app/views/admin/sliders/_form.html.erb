<%= image_tag "ss.png", size: "700x280" %>
<%= form_for([:admin, @slider]) do |f| %>
  <%= render partial: "shared/error_messages", locals: {obj: @slider} %>
    <div class="form-group">
      <label for="name">图片描述</label>
      <%= f.text_field :name, class: "form-control", placeholder: "图片描述" %>
    </div>
    <div class="form-group">
      <label for="style">图片类型</label>
      <%= f.select :style, Slider::SLIDER_TYPE.invert, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="pic">上传图片</label>
      <%= f.file_field :pic, class: "form-control" %>
      <%= image_tag(@slider.pic_url, class: "img-thumbnail") if @slider.pic? %>
    </div>
  <%= f.button "提交", class: "btn btn-success", data: { disable_with: "#{fa_icon("spinner spin", text: "提交...")}" } %>
  <%= link_to "取消", admin_sliders_path, class: "btn btn-primary" %>
<% end %>